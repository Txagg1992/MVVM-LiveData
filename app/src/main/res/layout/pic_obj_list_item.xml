<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:elevation="6dp"
    android:id="@+id/card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pic_obj_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pic_obj_image_height"
            android:scaleType="centerCrop"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_launcher_background"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/pic_obj_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User:"
                android:textSize="@dimen/pic_obj_user_text_size"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:id="@+id/pic_obj_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags:"
                    android:textColor="@android:color/white"
                    android:layout_weight="80"
                    android:textSize="@dimen/pic_obj_text_size"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/pic_obj_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Likes"
                    android:layout_weight="20"
                    android:textSize="@dimen/pic_obj_text_size"
                    android:textColor="@color/red"
                    android:gravity="center"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>